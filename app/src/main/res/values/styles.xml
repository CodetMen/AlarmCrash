<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color7</item>
        <item name="android:colorBackground">@color/color2</item>
    </style>

    <style name="TitleSplashScreen">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAppBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/color3</item>
    </style>

    <style name="CustomAppBarAddEdit">
        <item name="android:background">@color/color3</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">#00838f</item>
        <item name="colorAccent">#e91e63</item>
    </style>

    <style name="FontCustomStyle1">
        <item name="android:textColor">@color/color7</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
